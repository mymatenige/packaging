/srv/data1/media/mythtv/logs/*.log {
        weekly
        rotate 8
        missingok
        ifempty
        nocreate
        nocompress
        sharedscripts
        olddir /srv/data1/media/mythtv/logs/old
        su mythtv mythtv
        lastaction
                /usr/bin/killall -q -HUP mythlogserver
                /usr/bin/find /srv/data1/media/mythtv/logs/old -type f -mtime +30 -delete
        endscript
} 
